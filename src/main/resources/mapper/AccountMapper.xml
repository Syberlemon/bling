<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wh.bling.mapper.AccountMapper">
    <select id="getAccounts" resultType="com.wh.bling.req.GetAccountRes" parameterType="com.wh.bling.req.GetAccountReq">
        select name,upwd from tbl_account where 1= 1
        <if test="name != null">and name like concat('%',#{name},'%')</if>
    </select>
</mapper>